<div class="body recipestyles">
<h1>fave ingredients</h1>

<div class="listingthings">
<ul>
    <% if(ingredient.length >0){ %>
    <% ingredient.forEach(ingredient => { %>
        <li><form method="GET" action='/results/<%= ingredient.foodId %> '>
            <input type="hidden" name="uri" value='<%= ingredient.measureUri %>'>
            <input type="hidden" name="foodId" value="<%= ingredient.foodId %>">
            <input type="hidden" name="quantity" value='1'>
            <input type="submit" name="foodLabel" value="<%= ingredient.name %> | <%= ingredient.healthLabel %>">
            </form>
        <form method="POST" action='/faveingredients/<%= ingredient.foodId %> ?_method=DELETE'>
            <input type="hidden" name="id" value="<%=ingredient.id%>">
            <input type="hidden" name="foodId" value="<%=ingredient.foodId%>">
            <input type="submit" value="Remove from favorites">
        </form>
        </li>
    <% })} else{ %>
        <li><%= 'There are no saved ingredients.' %></li>
    <% }; %>
</ul>
</div>

<div class="search">
<h3>I want to search for</h3>

<form method=GET action="/results">
    <select name="searchtype">
            <option value="food" name="food">an Ingredient</option>
            <option value="recipe" name="recipe">a Recipe</option>
            </select>
    <input type='text' name="searchterm">
    <input type='submit' value='search'>    
</form>
</div>

</div>