<body class="loginsignuppage">
    <div class="loginsignupform">
        <form action="/auth/login" method="POST">
            <div class="loginform">
                <div class="loginemail">
                    <label for="auth-email">Email</label>
                    <input id="auth-email" type="email" name="email">
                </div>

                <div class="password">
                    <label for="auth-password">Password</label>
                    <input id="auth-password" type="password" name="password">
                </div>

            </div>
            <input type="submit" value="Log In" class="loginsignupbtn">
        </form>
        <div class="signup">
            <a href="/auth/signup">I am Veg too! Sign me up!</a>
        </div>
    </div>
</body>